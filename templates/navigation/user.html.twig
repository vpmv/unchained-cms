{% if app.request.pathInfo != '/login' %}
<li class="login">
    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
        <a class="nav-link" href="{{ url('admin_login') }}"><i class="fa fa-sign-in-alt"></i></a>
    {% else %}
        <a class="nav-link" href="/logout"><i class="fa fa-sign-out-alt"></i></a>
    {% endif %}
</li>
{% endif %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<li class="nav-item refresh">
    <a class="nav-link" href="{{ url('dash_refresh') }}" title="{{ 'reload config' | trans }}"><i class="fa fa-sync-alt"></i></a>
</li>
{% endif %}