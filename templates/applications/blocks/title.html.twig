{# time values #}
{% if type in ['date', 'datetime', 'dateTime'] %}
    {{ ('value.date.year-mo-MO-day')|trans({year: value.format('Y'), mo: value.format('m'), MO: ('time.month.'~value.format('M'))|lower|trans, day: value.format('d'), DAY: ('time.dow.'~value.format('D'))|lower|trans}) }}

    {# time values #}
{% elseif type == 'time' and value %}
    {{ value.format('H:i') }}

    {# textual values #}
{% else %}
    {% if value is iterable %}
        {{ value|join(', ') }}
    {% else %}
        {{ value }}
    {% endif %}
{% endif %}